    flex-direction: column;
    padding: 20rpx;
}

.detail-title {
    text-align: center;
    padding: 15px 0 5px;
    font-size: 20px;
}

.detail-dateTime {
    text-align: center;
    color: #aaa;
    padding: 5px 0 20px;
    font-size: 18px;
}

