.about {
}
/*logo 和 标题*/
.about-wei {
    text-align: center;
}

/*logo*/
.about-img image {
    display: block;
    width: 100px;
    height: 100px;
    margin: 15px auto 0;
}

/*标题*/
.about-title {
    display: inline-block;
    margin: 15px 0;
    font-size: 18px;
    font-weight: bold;
}

/*简介*/
.about-content {
    text-indent: 2em;
    font-size: 16px;
    margin: 0 23px;
    line-height: 1.5;
}

/*联系人及以下内容*/
.about-info {
    font-size: 16px;
    margin-top: 30px;
    margin-left: 23px;
    line-height: 2;
    text-indent: 2em;
}

/*联系方式*/
.about-inter {
    font-size: 18px;
    font-weight: bold;
    text-align: center;
    margin-left: -23px;
    margin-bottom: 5px;
    text-indent: -2em;
}
